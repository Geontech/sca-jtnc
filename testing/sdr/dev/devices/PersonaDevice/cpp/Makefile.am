ossieName = PersonaDevice
CFDIR = ../../../../../../base

distclean-local:
	rm -f config.*
	rm -rf autom4te.cache
	rm -f acinclude.m4
	rm -f aclocal.m4
	rm -f configure
	rm -f depcomp
	rm -f install-sh
	rm -f ltmain.sh
	rm -f Makefile.in
	rm -f missing
	rm -rf .deps

install:
	make -j


# Sources, libraries and library directories are auto-included from a file
# generated by the REDHAWK IDE. You can remove/modify the following lines if
# you wish to manually control these options.
include $(srcdir)/Makefile.am.ide

lib_LTLIBRARIES = libPersonaDevice.la
libPersonaDevice_la_SOURCES = $(redhawk_SOURCES_auto)
libPersonaDevice_la_CXXFLAGS = -Wall $(BOOST_CPPFLAGS) $(redhawk_INCLUDES_auto) -I$(CFDIR)/include
libPersonaDevice_la_LDFLAGS = -Wall $(redhawk_LDFLAGS_auto)

